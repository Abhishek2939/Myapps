<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/lateafter"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:background="@drawable/roundtextview"
        android:textColor="@color/darkblue"
        android:textStyle="bold|italic"
        android:textAlignment="center"
        android:paddingTop="3dp"
        android:text="CANCEL BOOKING"
        android:id="@+id/textView201" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="70dp"
        android:orientation="horizontal"
        android:layout_height="30dp">

        <TextView
            android:text="Flight no      :"
            android:layout_width="150dp"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/darkblue"
            android:textAllCaps="true"
            android:textStyle="bold|italic"
            android:layout_height="30dp"
            android:id="@+id/textView8" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:inputType="textPersonName"
            android:textSize="20dp"
            android:background="@drawable/roundtextview"
            android:ems="10"
            android:paddingLeft="10dp"
            android:id="@+id/editText200"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_height="30dp">

        <TextView
            android:text="Email id         :"
            android:layout_width="150dp"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/darkblue"
            android:textAllCaps="true"
            android:textStyle="bold|italic"
            android:layout_height="50dp"
            android:id="@+id/textView12" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:inputType="textEmailAddress"
            android:textSize="20dp"
            android:background="@drawable/roundtextview"
            android:ems="10"
            android:paddingLeft="10dp"
            android:id="@+id/editText14"
            android:layout_weight="1" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_height="30dp">

        <TextView
            android:text="Departure    :"
            android:layout_width="150dp"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/darkblue"
            android:textAllCaps="true"
            android:textStyle="bold|italic"
            android:layout_height="50dp"
            android:id="@+id/textView10" />

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:textSize="20dp"
            android:ems="10"
            android:background="@drawable/roundtextview"
            android:paddingLeft="10dp"
            android:id="@+id/autoCompleteTextView3"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_height="30dp">

        <TextView
            android:text="Destination  :"
            android:layout_width="150dp"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/darkblue"
            android:textAllCaps="true"
            android:textStyle="bold|italic"
            android:layout_height="50dp"
            android:id="@+id/textView11" />

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/roundtextview"
            android:textSize="20dp"
            android:ems="10"
            android:paddingLeft="10dp"
            android:id="@+id/autoCompleteTextView4"
            android:layout_weight="1" />

    </LinearLayout>


    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="300dp">

        <EditText
            android:layout_width="match_parent"
            android:textColorHint="@color/darkblue"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:hint="FLIGHT DATE"
            android:background="@drawable/roundtextview"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="10dp"
            android:id="@+id/editText300" />

        <Button
            android:layout_marginRight="5dp"
            android:background="@drawable/calender"
            android:layout_marginEnd="16dp"
            android:layout_alignBottom="@+id/editText300"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_height="40dp"
            android:id="@+id/button300"
            android:layout_width="40dp" />
    </RelativeLayout>

    <Button
        android:layout_marginTop="50dp"
        android:text="Next"
        android:textAllCaps="true"
        android:textSize="20dp"
        android:textColor="@color/darkblue"
        android:textStyle="bold|italic"
        android:layout_marginLeft="20dp"
        android:background="@drawable/roundtextview"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button4" />


</LinearLayout>