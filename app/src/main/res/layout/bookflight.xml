<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:orientation="vertical"
android:background="@drawable/sky"
    android:layout_height="match_parent"
    android:weightSum="1">


<TextView
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_height="30dp"
    android:textSize="20dp"
    android:background="@drawable/roundtextview"
    android:textColor="@color/darkblue"
    android:textStyle="bold|italic"
    android:textAlignment="center"
    android:paddingTop="3dp"
    android:text="FLIGHT BOOKING"
    android:id="@+id/textView100" />
    <AutoCompleteTextView
        android:layout_width="200dp"
        android:layout_marginLeft="50dp"
        android:hint="Departure location"
        android:textColorHint="@color/darkblue"
        android:paddingLeft="10dp"
        android:background="@drawable/roundtextview"
        android:id="@+id/autoCompleteTextView1"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"/>
    <AutoCompleteTextView
        android:layout_marginStart="10dp"
        android:paddingLeft="10dp"
        android:background="@drawable/roundtextview"
        android:layout_marginLeft="20dp"
        android:hint="Destination location"
        android:textColorHint="@color/darkblue"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/autoCompleteTextView2" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="ADULTS"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/darkblue"
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/textView5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="150dp"
            android:text="CHILDREN"
            android:layout_marginTop="20dp"
            android:textColor="@color/darkblue"
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/textView6" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="47dp">



        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginRight="3dp"
            android:layout_weight=".28"
            android:layout_marginLeft="20dp"
            android:background="@drawable/spinnerboarder"
            android:orientation="horizontal">

            <Spinner
                android:layout_height="40dp"
                android:scaleX="1"
                android:scaleY="1"
                android:spinnerMode="dropdown"
                android:background="@android:color/transparent"
                android:id="@+id/Spinner2"
                android:layout_width="100dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true">
            </Spinner>

            <ImageView
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/spin"
                android:layout_width="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/Spinner2"
                android:layout_alignEnd="@+id/Spinner2" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_marginRight="3dp"
            android:layout_weight=".28"
            android:layout_marginLeft="20dp"
            android:background="@drawable/spinnerboarder"
            android:orientation="horizontal">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:scaleX="1"
                android:scaleY="1"
                android:spinnerMode="dropdown"
                android:background="@android:color/transparent"
                android:id="@+id/Spinner1"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
            </Spinner>

            <ImageView
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/spin"
                android:layout_width="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

<TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="CABIN"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/darkblue"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/textView7" />

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_weight=".28"
            android:layout_marginLeft="20dp"
            android:background="@drawable/spinnerboarder"
            android:orientation="horizontal">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:scaleX="1"
            android:scaleY="1"
            android:spinnerMode="dropdown"
            android:background="@android:color/transparent"
            android:id="@+id/Spinner3">
        </Spinner>

            <ImageView
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/spin"
                android:layout_width="50dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="300dp">

        <EditText
            android:layout_width="300dp"
            android:textColorHint="@color/darkblue"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:hint="DEPARTURE DATE"
            android:background="@drawable/roundtextview"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="10dp"
            android:id="@+id/editText300" />

        <Button
            android:layout_marginRight="5dp"
            android:background="@drawable/calender"
            android:layout_marginEnd="16dp"
            android:layout_alignBottom="@+id/editText300"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_height="40dp"
            android:id="@+id/Button7"
            android:layout_width="40dp" />
    </RelativeLayout>


    <Button
        android:text="next"
        android:textStyle="bold"
        android:background="@drawable/roundtextview"
        android:textColor="@color/darkblue"
        android:id="@+id/button6"
        android:layout_marginTop="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="35dp"
        android:layout_width="match_parent"></Button>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:textColor="@color/darkblue"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:text=" FOR CANCELLATON SWIPE LEFT"/>


</LinearLayout>


