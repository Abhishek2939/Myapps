<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_signup"
    android:layout_width="match_parent"
    android:background="@drawable/abk2"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hello.airindia.Signup">

    <EditText
        android:layout_width="match_parent"
        android:textColor="@color/darkblue"
        android:background="@drawable/roundtextview"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:hint="Username"
        android:paddingStart="15dp"
        android:paddingLeft="10dp"
        android:textColorHint="@color/skyblue"
        android:ems="10"
        android:id="@+id/editText3"
         />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/roundtextview"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/skyblue"
        android:paddingStart="15dp"
        android:paddingLeft="10dp"
        android:ems="10"
        android:textColor="@color/darkblue"
        android:hint=" Email"
        android:id="@+id/editText4" />

    <EditText
        android:layout_marginTop="20dp"
        android:paddingStart="15dp"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:background="@drawable/roundtextview"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:textColor="@color/darkblue"
        android:hint="Password"
        android:textColorHint="@color/skyblue"
        android:id="@+id/editText5" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp">
        <EditText
            android:layout_height="40dp"
            android:paddingStart="15dp"
            android:paddingLeft="10dp"
            android:background="@drawable/roundtextview"
            android:inputType="textPersonName"
            android:hint="Age"
            android:textColor="@color/darkblue"
            android:textColorHint="@color/skyblue"
            android:ems="10"
            android:id="@+id/editText7"
            android:layout_width="140dp" />

        <EditText
            android:layout_width="match_parent"
            android:background="@drawable/roundtextview"
            android:layout_height="40dp"
            android:paddingStart="15dp"
            android:paddingLeft="10dp"
            android:inputType="textPersonName"
            android:hint="Gender"
            android:textColorHint="@color/skyblue"
            android:layout_marginLeft="160dp"
            android:ems="10"
            android:textColor="@color/darkblue"
            android:id="@+id/editText8" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp">

        <EditText
            android:layout_width="140dp"
            android:paddingStart="15dp"
            android:paddingLeft="10dp"
            android:background="@drawable/roundtextview"
            android:textColor="@color/darkblue"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:hint="Country"
            android:textColorHint="@color/skyblue"
            android:ems="10"
            android:id="@+id/editText9" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingStart="15dp"
            android:paddingLeft="10dp"
            android:inputType="textPersonName"
            android:hint="State"
            android:background="@drawable/roundtextview"
            android:textColorHint="@color/skyblue"
            android:layout_marginLeft="160dp"
            android:textColor="@color/darkblue"
            android:ems="10"
            android:id="@+id/editText10" />

    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="phone"
        android:paddingStart="15dp"
        android:paddingLeft="10dp"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:background="@drawable/roundtextview"
        android:hint="Contactnumber"
        android:textColor="@color/darkblue"
        android:textColorHint="@color/skyblue"
        android:id="@+id/editText11" />

    <Button
        android:text="Register"
        android:background="@drawable/roundtextview"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textStyle="bold"
        android:textColor="@color/darkblue"
        android:layout_marginTop="20dp"
        android:id="@+id/button3" />
    <Button
        android:text="ShowALL"
        android:visibility="invisible"
        android:textStyle="bold"
        android:textColor="@color/darkblue"
        android:background="@drawable/roundtextview"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:id="@+id/button4" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mTV"
        android:visibility="invisible"
        android:textColor="@color/darkblue"/>




</LinearLayout>
