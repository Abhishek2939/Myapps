<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/abk"
    android:id="@+id/activity_finalpayment4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hello.airindia.Finalpayment4">
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:background="@drawable/roundtextview"
        android:textColor="@color/darkblue"
        android:textStyle="bold|italic"
        android:textAlignment="center"
        android:paddingTop="3dp"
        android:text="PAYMENT SUMMARY"
        android:layout_marginBottom="25dp"
        android:id="@+id/textView117" />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="200dp"
            android:layout_marginBottom="10dp"
            android:layout_height="30dp"
            android:textColor="@color/darkblue"
            android:textStyle="bold|italic"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:text="NO. OF ADULTS        :"
            android:id="@+id/textView106" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="@color/darkblue"
            android:textSize="20dp"
            android:textStyle="bold|italic"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/textView107" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView108"
            android:layout_width="215dp"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:text="FARE OF ADULTS    : Rs"
            android:textColor="@color/darkblue"
            android:textSize="20dp"
            android:textStyle="bold|italic" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/darkblue"
            android:textStyle="bold|italic"
            android:layout_marginLeft="20dp"
            android:id="@+id/textView109" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/darkblue"
            android:textStyle="bold|italic"
            android:text="NO. OF CHILDREN   :"
            android:id="@+id/textView110" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:textColor="@color/darkblue"
            android:textStyle="bold|italic"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/textView111" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView112"
            android:layout_width="215dp"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:text="FARE OF CHILDREN : Rs"
            android:textColor="@color/darkblue"
            android:textSize="20dp"
            android:textStyle="bold|italic" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/darkblue"
            android:textStyle="bold|italic"
            android:layout_marginLeft="20dp"
            android:id="@+id/textView113" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="205dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/darkblue"
            android:textSize="20dp"
            android:textStyle="bold|italic"
            android:text="TOTAL FARE           : Rs"
            android:id="@+id/textView114" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:textSize="20dp"
            android:textColor="@color/darkblue"
            android:textStyle="bold|italic"
            android:layout_marginLeft="20dp"
            android:id="@+id/textView115" />
</LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        android:textColor="@color/darkblue"
        android:background="@drawable/roundtextview"
        android:text="PAY"
        android:id="@+id/button200" />

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:visibility="invisible"
        android:layout_height="match_parent"
        android:textColor="@color/darkblue"
        android:textStyle="bold|italic"
        android:text="PAYMENT SUCCESSFULL!!! YOUR TICKETS HAS BEEN BOOKED .PLEASE CHECK YOUR EMAIL ID"
        android:id="@+id/textView116" />

    </LinearLayout>
