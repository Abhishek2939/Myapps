<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_air1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/sky"
    tools:context="com.example.hello.airindia.AIR1">



    <ImageView
        app:srcCompat="@drawable/logo"
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:paddingBottom="10dp"
        android:layout_marginLeft="120dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="LOGIN"
        android:textStyle="bold|italic"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textColor="@color/skyblue"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView4"
        android:background="@drawable/roundtextview"
        android:layout_height="40dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="40dp"
        android:drawablePadding="15dp"
        android:hint="Username"
        android:paddingLeft="15dp"
        android:textSize="25dp"
        android:textColorHint="@color/skyblue"
        android:textColor="@color/darkblue"
        android:inputType="textPersonName"
        android:drawableLeft="@drawable/download"
        android:ems="10"
        android:background="@drawable/roundtextview"
        android:layout_below="@+id/textView4"
        android:id="@+id/editText13" />
    <EditText
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="40dp"
        android:drawablePadding="15dp"

        android:hint="Emailid"
        android:paddingLeft="15dp"
        android:textSize="25dp"
        android:textColorHint="@color/skyblue"
        android:textColor="@color/darkblue"
        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/images"
        android:ems="10"
        android:background="@drawable/roundtextview"
        android:id="@+id/editText3" />

    <EditText
        android:textSize="25dp"
        android:layout_width="match_parent"
        android:paddingLeft="15dp"
        android:textColorHint="@color/skyblue"
        android:background="@drawable/roundtextview"
        android:drawablePadding="15dp"

        android:layout_height="40dp"
        android:textColor="@color/darkblue"
        android:drawableLeft="@drawable/pass"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Password"
        android:layout_below="@+id/editText13"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:id="@+id/editText2" />

    <Button
        android:text="Login"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/button1"
        android:background="@drawable/roundtextview"
        android:layout_below="@+id/editText2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
         />

    <Button
        android:text="Signup"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/button2"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/roundtextview"
        android:layout_alignParentStart="true" />
</LinearLayout>
